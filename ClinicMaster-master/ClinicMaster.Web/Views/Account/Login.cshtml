@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutOut.cshtml";
}

<div>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post" class="animate form login_form" role="form">
                    <h1>Login Form</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Email" class="form-control" placeholder="Email" />

                    <input asp-for="Password" class="form-control" placeholder="Password" />

                    <div>
                        <input type="submit" value="Log in" class="btn btn-outline-info" />
                        <div class="checkbox">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />
                        <div>
                            <h1><img src="~/assets/production/images/tooth.png" /> Smile Clinic</h1>
                            <p>©2023 All Rights Reserved.Clinic Master</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}