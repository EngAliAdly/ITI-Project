@model IEnumerable<Appointment>
@{
    Layout = null;
}

<div class="col-md-12">
    <div class="x_panel">

        <div class="x_content">
            <table id="appointments" class="table table-striped table-bordered dataTable">
                <thead>
                    <tr>
                        <th>Token</th>
                        <th>Patient name</th>
                        <th>Phone</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Doctor</th>
                        <th>Detail</th>
                        <th>Status</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Patient.Token</td>
                            <td>@item.Patient.Name</td>
                            <td>@item.Patient.Phone</td>
                            <td>@item.StartDateTime.ToString("MMM")-@item.StartDateTime.ToString("d ")-@item.StartDateTime.ToString("yyyy")</td>
                            <td>@item.StartDateTime.ToString("HH:mm")</td>
                            <td>@item.Doctor.Name</td>
                            <td>@item.Detail</td>
                            <td>
                                @{
                                    if (item.Status == true)
                                    {
                                        <h2> <span class="badge badge-success">Approved</span></h2>
                                    }
                                    else
                                    {
                                        
                                        <h2> <span class="badge badge-warning">Pending</span></h2>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('.dataTable').DataTable({
            "scrollY": "300px",
            "scrollCollapse": true,
            "paging": false,
            "filter": false,
            "info": false,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });</script>
