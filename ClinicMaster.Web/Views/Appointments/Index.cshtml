@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <partial name="_DataTableStylesheet" />
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Appointments</h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="appointments" class="table table-striped no-margin">
                    <thead>
                        <tr>
                            <th>Token</th>
                            <th>Patient name</th>
                            <th>Phone</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Doctor</th>
                            <th>Detail</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Patient.Token</td>
                            <td>@item.Patient.Name</td>
                            <td>@item.Patient.Phone</td>
                            <td>@item.StartDateTime.ToString("MMM")-@item.StartDateTime.ToString("d ")-@item.StartDateTime.ToString("yyyy")</td>
                            <td>@item.StartDateTime.ToString("HH:mm")</td>
                            <td>@item.Doctor.Name</td>
                            <td>@item.Detail</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <h2> <span class="badge badge-success">Approved</span></h2>
                                }
                                else
                                {
                                    <h2> <span class="badge badge-warning">Pending</span></h2>
                                }
                            </td>
                            <td>
                                <a asp-controller="Appointments" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fa fa-folder"></i> Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_DataTableScript" />
    <script>
        $(document).ready(function () {
            $("#appointments").DataTable();
        });</script>
}


