@model DoctorFormViewModel
@{
    ViewData["Title"] = "DoctorForm";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Add Doctor</h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form asp-controller="Account" asp-action="RegisterDoctor" method="post" class="form-horizontal form-label-left">
                    <input type="hidden" asp-for="Id" />

                    <div class="field item form-group">
                        <label asp-for="Name" class="col-form-label col-md-3 col-sm-3  label-align"></label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label asp-for="Phone" class="col-form-label col-md-3 col-sm-3  label-align"></label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="Phone" id="phoneInput" class="form-control" maxlength="11" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label asp-for="Specialization" class="col-form-label col-md-3 col-sm-3  label-align">Specializations</label>
                        <div class="col-md-6 col-sm-6">
                            <select asp-for="Specialization" asp-items="(SelectList)ViewBag.Specializations" class="select2_single form-control" tabindex="-1">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label asp-for="Address" class="col-form-label col-md-3 col-sm-3  label-align"></label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label asp-for="RegisterViewModel.Email" class="col-form-label col-md-3 col-sm-3  label-align"></label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="RegisterViewModel.Email" class="form-control" />
                            <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label asp-for="RegisterViewModel.Password" class="col-form-label col-md-3 col-sm-3  label-align"></label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="RegisterViewModel.Password" class="form-control" />
                            <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field item form-group">
                        <label asp-for="RegisterViewModel.ConfirmPassword" class="col-form-label col-md-3 col-sm-3  label-align"></label>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="RegisterViewModel.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="ln_solid">
                        <br />
                        <div class="form-group">
                            <div class="col-md-6 offset-md-3">
                                <button type='submit' class="btn btn-outline-info">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Get the input element by its ID
        var phoneInput = document.getElementById("phoneInput");

        // Add an input event listener to the input element
        phoneInput.addEventListener("input", function (event) {
            // Get the input value
            var inputValue = event.target.value;

            // Remove any non-digit characters using a regular expression
            var numericValue = inputValue.replace(/\D/g, "");

            // Limit the input to 11 characters
            if (numericValue.length > 11) {
                numericValue = numericValue.substring(0, 11);
            }

            // Update the input value with the sanitized value
            event.target.value = numericValue;
        });
    </script>
}